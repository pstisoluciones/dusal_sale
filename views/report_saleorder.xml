<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_saleorder_document_dusal" inherit_id="sale.report_saleorder_document">	
	<xpath expr="//t/div[@class='page']/table[@class='table table-condensed'] | //t/div[@class='page']/t/table[@class='table table-condensed']" position="before">
        <t t-set="number" t-value="0"/>
    </xpath>
    <xpath expr="//t/div[@class='page']/table[@class='table table-condensed']/thead/tr/th[1] | //t/div[@class='page']/t/table[@class='table table-condensed']/thead/tr/th[1]" position="before">
        <th t-if="doc.print_line_number"><strong>No.</strong></th>
        <th t-if="doc.print_product_image"><strong>Image</strong></th>
    </xpath>
    <xpath expr="//tbody[@class='sale_tbody']/t/t[@t-as='l']/tr/td[1] | //tbody[@class='sale_tbody']/t/tr/td[1] | //t/div[@class='page']/table[@class='table table-condensed']/tbody/tr/td[1] | //t/div[@class='page']/table[@class='table table-condensed']/t/t/tr/td[1]" position="before">
        <td t-if="doc.print_line_number">
            <t t-set="number" t-value="number+1"/>
            <span t-esc="number"/>
        </td>
        <td t-if="doc.print_product_image">
            <span t-if="doc.image_size == 'small'"><img t-if="l.product_image_small" t-att-src="'data:image/png;base64,%s' % l.product_image_small" style="width: unset; max-width: 100%;"/></span>
            <span t-if="doc.image_size == 'medium'"><img t-if="l.product_image_medium" t-att-src="'data:image/png;base64,%s' % l.product_image_medium" style="width: unset; max-width: 100%;"/></span>
            <span t-if="doc.image_size == 'big'"><img t-if="l.product_image" t-att-src="'data:image/png;base64,%s' % l.product_image" style="width: unset; max-width: 100%;"/></span>
            
        </td>
    </xpath>
</template>
</data>
</openerp>
